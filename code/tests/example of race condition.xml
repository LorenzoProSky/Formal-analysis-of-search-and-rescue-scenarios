<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>
    // Shared variable
    int shared_resource = 0;
    
    // Local variables for processes
    int local_p1 = 5;
    int local_p2 = 8;

    broadcast chan channel;
  </declaration>
	<template>
		<name>Process</name>
		<parameter>int&amp; local_var</parameter>
		<location id="id0" x="0" y="0">
			<name x="-10" y="-30">Start</name>
		</location>
		<location id="id1" x="280" y="0">
			<name x="270" y="-30">Read</name>
		</location>
		<init ref="id0"/>
		<transition id="id2">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="18" y="-17">channel?</label>
			<label kind="assignment" x="18" y="0">shared_resource = local_var</label>
		</transition>
	</template>
	<template>
		<name>Channn</name>
		<location id="id3" x="0" y="0">
		</location>
		<location id="id4" x="195" y="0">
		</location>
		<init ref="id3"/>
		<transition id="id5">
			<source ref="id3"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="25" y="-25">channel!</label>
		</transition>
	</template>
	<system>
    // Template instantiations
    P1 = Process(local_p1);
    P2 = Process(local_p2);
    C = Channn();

    // List one or more processes to be composed into a system.
    system P1, P2, C;
  </system>
	<queries>
		<query>
			<formula>E&lt;&gt; (P1.End and P2.End and shared_resource == 1)</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2024-06-27 11:58:44 +0200">
			</result>
		</query>
		<query>
			<formula>A[] (P1.End and P2.End imply shared_resource == 2)</formula>
			<comment/>
			<result outcome="failure" type="quality" timestamp="2024-06-27 11:58:48 +0200">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; (P1.End and P2.End)</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2024-06-27 11:58:50 +0200">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; shared_resource == 5</formula>
			<comment/>
			<result outcome="failure" type="quality" timestamp="2024-06-27 12:07:04 +0200">
			</result>
		</query>
	</queries>
</nta>
